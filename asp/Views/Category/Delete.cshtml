@model Category


<form method ="post" asp-action="DeletePost">

    <input asp-for="Id" hidden/> 
    <div class="border p-3 mt-4 bg-black bg-opacity-10">
        <div row pb-2>
            
            <h2 class=" text-primary">
                Delete Category
            </h2>
            <hr />
        </div>
        <div class="mb-3 text-primary">
            
            <label asp-for="Name" ></label>
            <input asp-for="Name" class="form-control" disabled/>
        </div>
        <div class="mb-3 text-primary">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
        </div>
        <div class="mt-5">
        <button type="submit" style="width:150px" class="btn btn-primary"> Delete</button>


        <a asp-controller="Category" asp-action="Index" class="btn btn-success "style="width:150px height:10px " > 
            Back to list
